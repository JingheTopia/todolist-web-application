<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= ListTitle%> to-do List</h1>
</div>

<div class="box">
  <%  newItemLists.forEach(function(newItem){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=newItem._id%>" onchange="this.form.submit()">
      <p> <%= newItem.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= ListTitle%>"></input>
  </form>

  <%  }); %>
  <form class="item" action="/" method="post">
    <input type="text" name="nextItem" placeholder="New Item">
    <button type="submit" name="buttonList" value=<%= ListTitle %>>+</button>

  </form>
</div>
<%- include("footer") -%>
